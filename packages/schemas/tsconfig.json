{
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "types/*": [
        "../../types/*",
        "./types/*",
        "../../web/types/*",
        "../../api/types/*"
      ],
      "src/*": [
        "./src/*",
      ]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ],
  },
  "include": [
    "src",
    "./types"
  ]
}
